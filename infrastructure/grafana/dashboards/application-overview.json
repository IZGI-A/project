{
  "uid": "app-overview",
  "title": "Application Overview",
  "tags": ["django", "application"],
  "timezone": "browser",
  "editable": true,
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "15s",
  "panels": [
    {
      "id": 1,
      "title": "HTTP Request Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(django_http_requests_total_by_method_total[5m])) by (method)",
          "legendFormat": "{{ method }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "HTTP Error Rate (5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx errors/s",
          "refId": "A"
        },
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total{status=~\"4..\"}[5m]))",
          "legendFormat": "4xx errors/s",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "line", "fillOpacity": 15, "lineWidth": 2 },
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "5xx errors/s" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "id": 3,
      "title": "Response Latency (p50 / p95 / p99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(django_http_requests_latency_seconds_by_view_method_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(django_http_requests_latency_seconds_by_view_method_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(django_http_requests_latency_seconds_by_view_method_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "HTTP Responses by Status",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(rate(django_http_responses_total_by_status_total[5m])) by (status)",
          "legendFormat": "{{ status }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "custom": { "drawStyle": "bars", "fillOpacity": 50, "stacking": { "mode": "normal" } }
        },
        "overrides": []
      }
    },
    {
      "id": 5,
      "title": "Active DB Connections",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "pg_stat_activity_count{datname=\"financial_shared\"}",
          "legendFormat": "active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "red", "value": 90 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 6,
      "title": "Requests In-Flight",
      "type": "gauge",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "django_http_requests_before_middlewares_total - django_http_responses_before_middlewares_total",
          "legendFormat": "in-flight",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 20 },
              { "color": "red", "value": 50 }
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "id": 7,
      "title": "Sync Operations",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(increase(sync_operations_total{status=\"COMPLETED\"}[5m])) by (tenant)",
          "legendFormat": "{{ tenant }} — COMPLETED",
          "refId": "A"
        },
        {
          "expr": "sum(increase(sync_operations_total{status=\"FAILED\"}[5m])) by (tenant)",
          "legendFormat": "{{ tenant }} — FAILED",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 60, "stacking": { "mode": "normal" } }
        },
        "overrides": [
          {
            "matcher": { "id": "byRegexp", "options": ".*FAILED.*" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byRegexp", "options": ".*COMPLETED.*" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      }
    },
    {
      "id": 8,
      "title": "Sync Duration",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(sync_duration_seconds_bucket[15m])) by (le, tenant))",
          "legendFormat": "{{ tenant }} p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(sync_duration_seconds_bucket[15m])) by (le, tenant))",
          "legendFormat": "{{ tenant }} p95",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "drawStyle": "line", "fillOpacity": 10, "lineWidth": 2 }
        },
        "overrides": []
      }
    },
    {
      "id": 9,
      "title": "Validation Errors",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 16 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(increase(validation_errors_total[5m])) by (error_type)",
          "legendFormat": "{{ error_type }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50, "stacking": { "mode": "normal" } }
        },
        "overrides": []
      }
    },
    {
      "id": 10,
      "title": "ClickHouse Rows Inserted",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(increase(clickhouse_rows_inserted_total[5m])) by (tenant, table)",
          "legendFormat": "{{ tenant }} / {{ table }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "bars", "fillOpacity": 50 }
        },
        "overrides": []
      }
    },
    {
      "id": 11,
      "title": "Data Upload Volume",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "datasource": { "type": "prometheus", "uid": "PBFA97CFB590B2093" },
      "targets": [
        {
          "expr": "sum(increase(data_upload_bytes_total[5m])) by (tenant)",
          "legendFormat": "{{ tenant }}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "custom": { "drawStyle": "bars", "fillOpacity": 50 }
        },
        "overrides": []
      }
    }
  ],
  "schemaVersion": 39
}
